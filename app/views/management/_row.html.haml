%td.tg-record= user.id
%td.tg-record= user.email
%td.tg-record= user.first_name
%td.tg-record= user.last_name
- if user.id != current_user.id
  %td.tg-record 
    - if user.admin
      = f.select :admin, options_for_select(%w[true false])
    - else
      = f.select :admin, options_for_select(%w[false true])
  %td.tg-record
    - if user.redactor
      = f.select :redactor, options_for_select(%w[true false])
    - else
      = f.select :redactor, options_for_select(%w[false true])
- else
  %td.tg-record= user.admin
  %td.tg-record= user.redactor

