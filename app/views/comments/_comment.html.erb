<p>
    <strong>Commenter</strong><br>
      <%= comment.commenter %><br>
    <strong>Comment</strong><br>
    <%= comment.body %>
  
  <% if can? :destroy, comment %>
    <%= link_to 'Delete', [comment.article, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>  
  <% end %>
</p>

